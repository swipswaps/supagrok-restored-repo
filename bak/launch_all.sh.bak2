#!/usr/bin/env bash
# launch_all.sh â€” PRFâ€‘COMPOSITEâ€‘2025â€‘04â€‘30â€‘E (One-Shot Gaze Tracker Launcher)
# Purpose: Launch everything (server, logger, browser) in one PRFâ€‘compliant shot
# Author: Supagrok System Autogen â€” Do Not Modify Inline
# UUID: 6810e201-4d88-8008-b97b-e72dfdca3250
# Timestamp: 2025-04-30T09:23:00-04:00

set -euo pipefail
cd "$(dirname "$0")"

# === CONFIG ===
LOG=prf_runlog.txt
PORT=8000
BROWSER="firefox"
HTTP_SERVER_PID=""
WS_SERVER_PID=""
LOGGER_PID=""

function cleanup {
  echo "ğŸ§¼ Cleaning up processes..." | tee -a "$LOG"
  [[ -n "$HTTP_SERVER_PID" ]] && kill "$HTTP_SERVER_PID" 2>/dev/null || true
  [[ -n "$WS_SERVER_PID" ]] && kill "$WS_SERVER_PID" 2>/dev/null || true
  [[ -n "$LOGGER_PID" ]] && kill "$LOGGER_PID" 2>/dev/null || true
}

trap cleanup EXIT

# === PRECHECK: Ensure no stale WS server ===
if lsof -i :8765 &>/dev/null; then
  echo "âš ï¸ WebSocket port 8765 already in use. Attempting to free..." | tee -a "$LOG"
  fuser -k 8765/tcp || true
  sleep 1
fi

# === PHASE 1: Launch WebSocket Server ===
echo "ğŸŒ Launching WebSocket server..." | tee "$LOG"
python3 gaze_ws_server.py &
WS_SERVER_PID=$!
sleep 1

# === PHASE 2: Launch Overlay Logger ===
echo "ğŸ¯ Launching Overlay Logger..." | tee -a "$LOG"
python3 overlay_gaze_logger.py &
LOGGER_PID=$!
sleep 1

# === PHASE 3: Serve index.html ===
echo "ğŸ“¡ Starting HTTP server on port $PORT..." | tee -a "$LOG"
python3 -m http.server "$PORT" &
HTTP_SERVER_PID=$!
sleep 1

# === PHASE 4: Open Browser ===
echo "ğŸš€ Opening browser..." | tee -a "$LOG"
"$BROWSER" "http://localhost:$PORT/index.html" &
sleep 2

# === PHASE 5: Validate Connection Logs ===
echo "ğŸ“‹ Validating prf_runlog.txt for status..." | tee -a "$LOG"
grep -E 'WebSocket|Overlay|browser|HTTP server' "$LOG" || echo "âš ï¸ Missing expected launch output."

# === MONITOR SESSION ===
echo "ğŸŸ¢ System running â€” press Ctrl+C to exit." | tee -a "$LOG"
wait $LOGGER_PID
